{
  "name": "bug-reporter-react",
  "version": "0.1.0",
  "description": "Drop-in bug reporter for React apps â€” screenshot, video capture, annotation, and Linear/Jira integration.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && npx @tailwindcss/cli -i src/styles.css -o dist/styles.css --minify",
    "build:js": "tsup",
    "build:css": "npx @tailwindcss/cli -i src/styles.css -o dist/styles.css --minify",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "bug-reporter",
    "screenshot",
    "screen-recording",
    "linear",
    "jira",
    "html2canvas"
  ],
  "license": "MIT",
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html2canvas-pro": "^1.6.6",
    "lucide-react": "^0.563.0",
    "radix-ui": "^1.4.3",
    "tailwind-merge": "^3.4.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tsup": "^8.4.0",
    "typescript": "^5"
  }
}
